#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(libelf libelf-dev)
pkgver=0.189
pkgrel=1
pkgdesc='A collection of utilities and libraries to read, create and modify ELF binary files'
arch=(x86_64)
url='https://sourceware.org/elfutils/'
license=(GPL)
groups=(base)
depends=()
makedepends=(
    argp-standalone-dev
    musl-fts-dev
    musl-obstack-dev
    zlib-ng-dev
)
options=()
changelog=ChangeLog
source=(
    "https://sourceware.org/elfutils/ftp/${pkgver}/elfutils-${pkgver}.tar.bz2"
)

sha256sums=(
    39bd8f1a338e2b7cd4abc3ff11a0eddc6e690f69578a57478d8179b4148708c8
)


build() {
    cd_unpacked_src
    CFLAGS+=' -fPIC -Wno-error -DFNM_EXTMATCH=0' \
        ./configure --prefix=/usr \
        --disable-debuginfod \
        --disable-libdebuginfod
    make
}

package_libelf() {
    pkgfiles=(
        usr/lib/lib*.so.*
    )
    depends=(
        "ld-musl-$(arch).so.1"
        libz.so.1
    )
    provides=(
        libasm.so.1
        libelf.so.1
        libdw.so.1
    )
    std_package
}

package_libelf-dev() {
    pkgfiles=(
        usr/include
        usr/lib/lib*.a
        usr/lib/libasm.so
        usr/lib/libdw.so
        usr/lib/libelf.so
        usr/lib/pkgconfig
    )
    depends=(
        "libelf=${pkgver}"
        zlib-ng-dev
    )
    std_split_package
    sed -i 's/-lelf/& -lz/' "${pkgdir}/usr/lib/pkgconfig/libelf.pc"
}
