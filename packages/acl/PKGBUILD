#!/bin/bash
# shellcheck disable=SC2034,SC2154

# Rationale: Required by libarchive

pkgname=(
    acl
    libacl
    libacl-dev
)
pkgver=2.3.1
pkgrel=1
pkgdesc='A library for manipulating POSIX access control lists'
arch=(x86_64)
url='http://savannah.nongnu.org/projects/acl'
license=(GPL)
groups=()
depends=()
makedepends=(gettext libattr-dev)
options=()
changelog=ChangeLog
source=(
    "http://download.savannah.gnu.org/releases/acl/acl-${pkgver}.tar.gz"
)
sha256sums=(
    760c61c68901b37fdd5eefeeaf4c0c7a26bdfdd8ac747a1edff1ce0e243c11af
)

build() {
    cd_unpacked_src
    CFLAGS+=' -fPIC' ./configure \
      --prefix=/usr
    make
}

package_acl() {
    pkgfiles=(
        usr/bin
    )
    depends=(
        "ld-musl-$(arch).so.1"
        libacl.so.1
        libattr.so.1
    )
    std_package
}

package_libacl() {
    pkgfiles=(
        usr/lib/lib*.so.*
    )
    depends=(
        "ld-musl-$(arch).so.1"
        libattr.so.1
    )
    provides=(
        libacl.so.1
    )
    std_split_package
}

package_libacl-dev() {
    pkgfiles=(
        usr/include
        usr/lib/*.a
        usr/lib/*.so
    )
    depends=(
        "libacl=${pkgver}"
    )
    std_split_package
}
