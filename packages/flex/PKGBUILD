#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(flex flex-dev)
pkgver=2.6.4
pkgrel=5
pkgdesc='A tool for generating scanners, or tokenizers that recognize lexical patterns in text.'
arch=(x86_64)
url='https://github.com/westes/flex/'
license=(GPL2)
groups=()
depends=()
makedepends=(bison)
options=()
changelog=ChangeLog
source=(
    "https://github.com/westes/flex/releases/download/v${pkgver}/flex-${pkgver}.tar.gz"
)

sha256sums=(
    e87aae032bf07c26f85ac0ed3250998c37621d95f8bd748b31f15b33c45ee995
)


build() {
    std_build
}

package_flex() {
    pkgfiles=(
        usr/bin
        usr/lib/lib*.so.*
        usr/share/man/man1/
    )
    depends=(
        "ld-musl-$(arch).so.1"
    )
    std_package
}

package_flex-dev() {
    pkgfiles=(
        usr/include
        usr/lib/*.a
        usr/lib/*.so
    )
    depends=(
        "flex=${pkgver}"
    )
    std_split_package
}
