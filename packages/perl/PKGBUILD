#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(perl)
pkgver=5.38.2
pkgrel=1
pkgdesc='An API for writing text-based user interfaces.'
arch=('x86_64')
url='http://www.perl.org'
license=('GPL2')
groups=()
depends=()
makedepends=()
options=()
changelog=ChangeLog

source=(
    "http://www.cpan.org/src/5.0/perl-${pkgver}.tar.xz"
)
sha256sums=(
    d91115e90b896520e83d4de6b52f8254ef2b70a8d545ffab33200ea9f1cf29e8
)


build() {
    cd_unpacked_src
    ./configure.gnu \
      -des -Dprefix=/usr \
      -Dcc="cc -D_GNU_SOURCE" \
      -Dvendorprefix=/usr \
      -Dprivlib="/usr/lib/perl5/${pkgver}" \
      -Darchlib="/usr/lib/perl5/${pkgver}/$(arch)-linux" \
      -Dsitelib="/usr/lib/perl5/site_perl/${pkgver}" \
      -Dvendorlib="/usr/lib/perl5/vendor_perl/${pkgver}" \
      -Dvendorarch="/usr/lib/perl5/vendor_perl/${pkgver}/$(arch)-linux" \
      -Dman1dir=/usr/share/man/man1 \
      -Dman3dir=/usr/share/man/man3 \
      -Dpager="/bin/less -I" \
      -Dusethreads \
      -Duseshrplib
    make
}

check() {
    cd_unpacked_src
    # make test
}

package() {
    pkgfiles=(
        usr/bin
        usr/lib
        usr/share
    )
    depends=(
        "ld-musl-$(arch).so.1"
    )
    provides=(
        libperl.so
    )
    std_package
}
