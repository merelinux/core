#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(openssl libssl-3 openssl-dev)
pkgver=3.2.1
pkgrel=1
pkgdesc='a toolkit for the TLS and SSL protocols'
arch=(x86_64)
url='https://www.openssl.org'
license=(BSD)
groups=()
depends=()
makedepends=(
    perl
    zlib-ng-dev
)
options=()
changelog=ChangeLog

source=(
    "https://www.openssl.org/source/openssl-${pkgver}.tar.gz"
)
sha256sums=(
    83c7329fe52c850677d75e5d0b0ca245309b97e8ecbcfdc1dfdc4ab9fac35b39
)


build() {
    cd_unpacked_src
    ./Configure \
        --prefix=/usr \
        --libdir=/usr/lib \
        --openssldir=/etc/ssl \
        linux-x86_64-clang
    make
}

package_openssl() {
    depends=(
        "ld-musl-$(arch).so.1"
        libcrypto.so.3
        libssl.so.3
    )
    pkgfiles=(
        etc/ssl/*.cnf
        usr/bin/openssl
        usr/share/man/man5
        usr/share/man/man7
    )
    std_package
}

package_libssl-3() {
    pkgfiles=(
        usr/lib/engines-3
        usr/lib/lib*.so.*
    )
    depends=(
        "ld-musl-$(arch).so.1"
    )
    provides=(
        libcrypto.so.3
        libssl.so.3
    )
    std_split_package
}

package_openssl-dev() {
    depends=(
        "libssl-3=${pkgver}"
    )
    pkgfiles=(
        usr/include
        usr/lib/lib*.a
        usr/lib/lib*.so
        usr/lib/pkgconfig
        usr/share/man/man3
    )
    std_split_package
}
