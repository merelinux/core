#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(openssl libssl-1 openssl-dev)
pkgver=1.1.1w
pkgrel=1
pkgdesc='a toolkit for the TLS and SSL protocols'
arch=(x86_64)
url='https://www.openssl.org'
license=(BSD)
groups=()
depends=()
makedepends=(
    perl
    zlib-ng-dev
)
options=()
changelog=ChangeLog

source=(
    "https://www.openssl.org/source/openssl-${pkgver}.tar.gz"
)
sha256sums=(
    cf3098950cb4d853ad95c0841f1f9c6d3dc102dccfcacd521d93925208b76ac8
)


build() {
    cd_unpacked_src
    ./Configure \
        --prefix=/usr \
        --libdir=/usr/lib \
        --openssldir=/etc/ssl \
        linux-x86_64-clang
    make
}

package_openssl() {
    depends=(
        "ld-musl-$(arch).so.1"
        libcrypto.so.1.1
        libssl.so.1.1
    )
    pkgfiles=(
        etc/ssl/*.cnf
        usr/bin/openssl
        usr/share/man/man5
        usr/share/man/man7
    )
    std_package
}

package_libssl-1() {
    pkgfiles=(
        usr/lib/engines-1.1
        usr/lib/lib*.so.*
    )
    depends=(
        "ld-musl-$(arch).so.1"
    )
    provides=(
        libcrypto.so.1.1
        libssl.so.1.1
    )
    conflicts=(
        "openssl<${pkgver}"
    )
    std_split_package
}

package_openssl-dev() {
    depends=(
        "libssl-1=${pkgver}"
    )
    pkgfiles=(
        usr/include
        usr/lib/lib*.a
        usr/lib/lib*.so
        usr/lib/pkgconfig
        usr/share/man/man3
    )
    std_split_package
}
