#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(execline execline-dev)
pkgver=2.9.2.1
pkgrel=1
pkgdesc='a (non-interactive) scripting language.'
arch=(x86_64)
url='http://skarnet.org/software/execline/'
license=(ISC)
groups=()
depends=()
makedepends=(skalibs-dev)
options=()
changelog=ChangeLog
source=(
    "http://skarnet.org/software/execline/execline-${pkgver}.tar.gz"
)

sha256sums=(
    dbccdd95bcee4b33d4d4cb7544ab92903ba2e2764165ddc8f395b67755b20405
)


build() {
    cd_unpacked_src
    ./configure \
      --prefix=/ \
      --enable-static-libc
    make
}

package_execline() {
    pkgfiles=(
        bin
    )

    cd_unpacked_src
    make DESTDIR="${pkgdirbase}/dest" install
    cd "${pkgdirbase}/dest" || return 1
    mv lib/execline/libexecline.a lib
    rm -rf lib/execline
    package_defined_files
}

package_execline-dev() {
    pkgfiles=(
        include
        lib
    )
    std_split_package
}
