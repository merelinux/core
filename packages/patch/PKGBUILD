#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(patch)
pkgver=2.7.6
pkgrel=7
pkgdesc='A utility for patching difference listings against one or more original files'
arch=(x86_64)
url='http://savannah.gnu.org/projects/patch/'
license=(GPL3)
groups=(build-base)
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "http://ftp.gnu.org/gnu/patch/patch-${pkgver}.tar.xz"
)

sha256sums=(
    ac610bda97abe0d9f6b7c963255a11dcb196c25e337c61f94e4778d632f1d8fd
)


build() {
    cd "$srcdir" || return 1
    # file is unable to correctly guess that this source is also a tar archive
    # so we have to manually extract it
    tar -xf "patch-${pkgver}.tar.xz"
    cd_unpacked_src
    LDFLAGS='--static' ./configure --prefix=/usr
    make V=1
}

package() {
    cd_unpacked_src
    make DESTDIR="${pkgdir}" install
    rm -rf "${pkgdir:?}/usr/lib"
}
